WEBKIT_DIR = $(SRCROOT)/WebKit

FRAMEWORK_SEARCH_PATHS = $(WEBKIT_DIR)
LIBRARY_SEARCH_PATHS = $(WEBKIT_DIR) $(inherited)
HEADER_SEARCH_PATHS = $(WEBKIT_DIR)/WebKit.framework/Versions/A/Headers

LD_DIR = @executable_path/../Frameworks

OTHER_LDFLAGS = -Wl,-dyld_env,DYLD_FRAMEWORK_PATH=$(LD_DIR) -Wl,-dyld_env,DYLD_LIBRARY_PATH=$(LD_DIR)
LD_RUNPATH_SEARCH_PATHS = $(LD_DIR) @executable_path/../../../../../Frameworks

RUNTIME_EXCEPTION_ALLOW_DYLD_ENVIRONMENT_VARIABLES = YES
RUNTIME_EXCEPTION_ALLOW_JIT = YES
